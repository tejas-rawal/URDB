<div class="title">
  <h1>Movies</h1>
</div>
<div class="actions">
  <%= link_to '<i class="icon-film"></i> New Movie'.html_safe, new_movie_path, :class => 'button right' %>
</div>
<table class="movies">
  <thead>
    <th>Title</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= link_to movie.title, movie %>
        </td>
        <td class="centered">
          <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_movie_path(movie) %>
        </td>
        <td class="centered">
          <%= link_to '<i class="icon-trash"></i>'.html_safe, movie, :method => :delete, :data => { :confirm => 'Are you sure you want to delete this movie?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
